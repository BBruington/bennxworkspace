//Because PlanetScale doesnâ€™t support foreign key constraints and Prisma defaults to using foreign keys to express relations, 
//we need to set this referentialIntegrity property when using Prisma with PlanetScale.
datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model SessionTest {
  id          Int @id @default(autoincrement())
  session     Int @unique
  description String @db.Text
  intro       String
  title       String
  //role         Role            @default(BASIC)
  combat      String
  npcs        String
  roleplay    String
}
